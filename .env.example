# Telegram-бот и уведомления о записях
# Создайте бота через @BotFather, узнайте chat_id через @userinfobot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_chat_id_here
# Несколько админов (через запятую), например: 123456789,987654321
# TELEGRAM_ADMIN_CHAT_IDS=123456789,987654321

# Секрет для хеширования админ-токена, который выдается через Telegram-бота
# Сгенерируйте длинную случайную строку (минимум 32 символа)
ADMIN_TOKEN_HASH_SECRET=change_me_to_long_random_secret
# Необязательно: путь к SQLite файлу с активным токеном
# ADMIN_TOKEN_DB_PATH=data/admin-auth.sqlite
# Дополнительная защита страницы /admin/upload по Basic Auth
ADMIN_UPLOAD_USER=admin
ADMIN_UPLOAD_PASSWORD=change_me_basic_auth_password

# ЮKасса — приём оплаты за занятия
# Получите shopId и secretKey в личном кабинете: https://yookassa.ru/my
# Если переменные не заданы — запись работает без оплаты
YOOKASSA_SHOP_ID=your_shop_id_here
YOOKASSA_SECRET_KEY=your_secret_key_here

# Стоимость одного занятия в рублях (по умолчанию 1500)
LESSON_PRICE_RUB=1500
